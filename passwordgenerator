import secrets
import string

def generate_secure_password(length=12):
    """
    Generates a secure random password of a specified length.
    The password includes uppercase letters, lowercase letters, digits, and punctuation.
    """
    if not isinstance(length, int) or length < 1:
        raise ValueError("Password length must be a positive integer.")

    # Define the character set for the password
    alphabet = string.ascii_letters + string.digits + string.punctuation

    # Generate the password using secrets.choice for cryptographic strength
    password = ''.join(secrets.choice(alphabet) for _ in range(length))
    return password

# Example usage:
password = generate_secure_password(16)
print(f"Generated Password: {password}")
